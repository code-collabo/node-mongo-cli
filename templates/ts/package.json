{
  "name": "node-mongo-api-boilerplate-template-ts",
  "version": "1.0.0",
  "description": "@code-collabo node-mongo API boilerplate template - typescript",
  "main": "src/server.[atlas/local].ts",
  "scripts": {
    "dev": "node -r esm node-mongo.js",
    "dev:local": "if [ ! -f ./src/server.local.ts ]; then echo \"Error: You can only run dev:local in local development mode\"; exit 1; fi && nodemon --exec ts-node src/server.local.ts",
    "dev:atlas": "if [ ! -f ./src/server.atlas.ts ]; then echo \"Error: You can only run dev:atlas in Atlas mode\"; exit 1; fi && nodemon --exec ts-node src/server.atlas.ts",
    "lint": "esw src --ext .ts --color",
    "lint:watch": "npm run lint -- --watch",
    "dev:restore": "node -r esm node-mongo.js",
    "dev:change": "node -r esm node-mongo.js"
  },
  "author": "Author Name",
  "license": "ISC",
  "dependencies": {
    "@code-collabo/node-mongo-scripts": "^1.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "esm": "^3.2.25",
    "express": "^4.18.2",
    "mongoose": "^7.0.5",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.16.1",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "chalk": "^4.1.0",
    "eslint": "^8.39.0",
    "eslint-watch": "^8.0.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
