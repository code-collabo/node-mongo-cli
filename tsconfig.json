{
  "display": "Node LTS",
  "_version": "20.1.0",
  "compilerOptions": {
    "lib": ["es2023"],
    "outDir": "dist",
    "module": "NodeNext",
    "target": "es2022",
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext"
  },
  "include": ["./src/"]
}
